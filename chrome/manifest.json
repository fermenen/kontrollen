{
  "manifest_version": 3,
  "name": "kontrollen",
  "description": "Take control of social media.",
  "version": "1.1",
  "author": "https://github.com/fermenen",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "kontrollen-favicon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "128": "kontrollen-favicon.png"
  }
}